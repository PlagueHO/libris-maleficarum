{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "libris-maleficarum",
      "configurations": [
        "app: libris-maleficarum-app",
        "open: browser"
      ]
    }
  ],
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "app: libris-maleficarum-app",
      "command": "pnpm dev",
      "cwd": "${workspaceFolder}/libris-maleficarum-app"
    },
    {
      "name": "open: browser",
      "request": "launch",
      "type": "msedge",
      "url": "http://127.0.0.1:4000/",
      "presentation": { "hidden": true }
    }
  ]
}