{
  // Runs the frontend dev server via pnpm from the app folder
  "version": "2.0.0",
  "tasks": [
    {
      "label": "app: dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/libris-maleficarum-app"
      }
    },
    {
      "label": "app: install",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/libris-maleficarum-app"
      }
    },
    {
      "label": "app: test",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/libris-maleficarum-app"
      }
    },
    {
      "label": "app: build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/libris-maleficarum-app"
      }
    },
    {
      "label": "app: lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "options": {
        "cwd": "${workspaceFolder}/libris-maleficarum-app"
      },
      "problemMatcher": ["$eslint-stylish"],
      "group": "test"
    }
  ]
}
