{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "microsoft-learn": {
      "type": "remote",
      "url": "https://learn.microsoft.com/api/mcp",
      "enabled": true
    },
    "agent-framework-docs": {
      "type": "remote",
      "url": "https://gitmcp.io/microsoft/agent-framework",
      "enabled": true
    },
    "azure-verified-module-bicep-docs": {
      "type": "remote",
      "url": "https://gitmcp.io/Azure/bicep-registry-modules",
      "enabled": true
    },
    "react-docs": {
      "type": "remote",
      "url": "https://gitmcp.io/facebook/react",
      "enabled": true
    },
    "typescript-docs": {
      "type": "remote",
      "url": "https://gitmcp.io/microsoft/TypeScript",
      "enabled": true
    },
    "nodejs-docs": {
      "type": "remote",
      "url": "https://gitmcp.io/nodejs/node",
      "enabled": true
    },
    "fluentui-docs": {
      "type": "remote",
      "url": "https://gitmcp.io/microsoft/fluentui",
      "enabled": true
    },
    "playwright-test": {
      "type": "local",
      "command": [
        "npx",
        "playwright",
        "run-test-mcp-server"
      ]
    }
  }
}
